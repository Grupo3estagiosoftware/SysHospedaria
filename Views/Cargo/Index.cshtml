@model IEnumerable<Cargo>

@{
    ViewData["Title"] = "Privacy Policy";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-9">
                <h1>Listagem de Cargos</h1>
            </div>
            <div class="col-sm-3 text-right">
                <a asp-controller="Cargo" asp-action="Create" class="btn btn-primary ">Adicionar</a>
              
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Visualise todos os cargos cadastrados</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Cargo</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                          @foreach (Cargo item in Model)
	                       {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Descricao</td>
                                <td>
                                    <a asp-action="Edit" asp-controller="Cargo" asp-route-id="@item.Id" class="btn btn-success text-white">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-controller="Cargo" asp-route-id="@item.Id" class="btn btn-danger text-white">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                                
                            </tr>
	                       }
                            
                        </tbody>
                        
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->