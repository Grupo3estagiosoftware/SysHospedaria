@model FuncionarioVM

@{
    ViewData["Title"] = "Cadastro de Funcionário";
}

@Html.AntiForgeryToken();

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cadastro de Funcionario</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item active">Cadastro de Funcionario</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row px-auto mx-auto">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Preencha o formulário</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="Create" asp-controller="Funcionario" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Nome</label>
                                <input asp-for="Nome">
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>BI</label>
                                <input asp-for="BI">
                                <span asp-validation-for="BI" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input asp-for="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Telefone</label>
                                <input asp-for="Telefone">
                                <span asp-validation-for="Telefone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Endereço</label>
                                <input asp-for="Enderco">
                                <span asp-validation-for="Enderco" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                @Html.DropDownListFor(m => m.CargoId, Model.CargoList, "-Selecionar cargo",
                             new { @class = "form-control" })
                                <span asp-validation-for="CargoId" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Submeter</button>
                            <a asp-controller="Funcionario" asp-action="Index" class="btn btn-primary">Voltar</a>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->

        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->