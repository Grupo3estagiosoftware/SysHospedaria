@model IEnumerable<Reserva>

@{
    ViewData["Title"] = "Privacy Policy";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-9">
                <h1>Todas as reservas</h1>
            </div>
            <div class="col-sm-3 text-right">
                <a asp-controller="Reserva" asp-action="Create" class="btn btn-primary ">Adicionar</a>

            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Visualise todos as reservas</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Data Entrada</th>
                                <th>Data Saida</th>
                                <th>Hospede</th>
                                <th>Quarto</th>
                                <th>Estado</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (Reserva item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.DataEntrada</td>
                                    <td>@item.DataSaida</td>
                                    <td>@item.Hospede.Nome</td>
                                    <td>@item.Quarto.Numero</td>
                                    <td>@item.Estado</td>
                                    <td>
                                        <a asp-action="Edit" asp-controller="Reserva" asp-route-id="@item.Id" class="btn btn-success text-white">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-controller="Reserva" asp-route-id="@item.Id" class="btn btn-danger text-white">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>

                                </tr>
                            }

                        </tbody>

                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->