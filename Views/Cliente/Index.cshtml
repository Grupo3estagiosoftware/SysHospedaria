@model IEnumerable<Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
}

    <div class="text-center">
        <h1>@ViewData["Title"]</h1>

        <table class="table">
            <tr class="thead-dark">
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Data de Cadastro</th>
                <th>Ativo</th>
                <th class="text-center"></th>
            </tr>
            @foreach (Cliente item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.Email</td>
                    <td>@item.DataCadastro</td>
                    <td>@item.Ativo</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Cliente" asp-route-id="@item.Id" class="btn btn-success text-white">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Delete" asp-controller="Cliente" asp-route-id="@item.Id" class="btn btn-danger text-white">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
